@model IEnumerable<CarDealer.Web.ViewModels.Sales.SaleViewModel>

@if (Model.Count() == 0)
{
    <h1>There is no sales in your country.</h1>
}

@foreach (var sale in Model)
{
    <table class="table table-secondary">
        <thead>
            <tr>
                <th>Manufacture date:</th>
                <th>Fuel type:</th>
                <th>Engine size:</th>
                <th>Euro standart:</th>
                <th>Gearbox:</th>
                <th>Category:</th>
                <th>Miliage:</th>
                <th>Color:</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@sale.Car.ManufactureDateAsString</td>
                <td>@sale.Car.FuelType</td>
                <td>@sale.Car.EngineSize</td>
                <td>@sale.Car.EuroStandart</td>
                <td>@sale.Car.Gearbox</td>
                <td>@sale.Car.Category</td>
                <td>@sale.Car.Mileage</td>
                <td>@sale.Car.Color</td>
            </tr>
        </tbody>
    </table>
}