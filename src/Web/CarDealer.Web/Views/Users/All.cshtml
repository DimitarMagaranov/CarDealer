@model CarDealer.Web.ViewModels.Sales.SalesListViewModel

@if (Model.Sales.Count() == 0)
{
    <section>
        <div class="container">
            <div class="text-center">
                <h1>Car Listing</h1>

                <br>

                <p class="lead">You don't have any added car.</p>
            </div>
        </div>
    </section>
}
else
{
    <section>
        <div class="container">
            <div class="text-center">
                <h1>Car Listing</h1>

                <br>

                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Illo, alias.</p>
            </div>
        </div>
    </section>

    <section class="section-background">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-xs-12">
                    <div class="row">
                        @foreach (var sale in Model.Sales)
                        {
                            <div class="col-lg-6 col-md-4 col-sm-6">
                                <div class="courses-thumb courses-thumb-secondary">
                                    <div class="courses-top">
                                        <div class="courses-image">
                                            <img src="@sale.ImageUrls.FirstOrDefault()" class="img-responsive" alt="">
                                        </div>
                                        <div class="courses-date">
                                            <span title="Author"><i class="fa fa-dashboard"></i> @sale.Car.Mileage km</span>
                                            <span title="Author"><i class="fa fa-cube"></i> @sale.Car.EngineSize cc</span>
                                            <span title="Views"><i class="fa fa-cog"></i> @sale.Car.Gearbox</span>
                                        </div>
                                    </div>

                                    <div class="courses-detail">
                                        <h3 class="mt-0"><a asp-action="SaleInfo" asp-route-id="@sale.Id">@sale.Name</a></h3>

                                        <p class="lead"><strong>@sale.Price €</strong></p>

                                        <p>@sale.Car.HorsePower hp &nbsp;&nbsp;/&nbsp;&nbsp; @sale.Car.FuelType &nbsp;&nbsp;/&nbsp;&nbsp; @sale.Car.ManufactureDate.Month/@sale.Car.ManufactureDate.Year &nbsp;&nbsp;/&nbsp;&nbsp; @sale.Car.State vehicle</p>
                                    </div>

                                    <div class="courses-info">
                                        <a href="/Sales/SaleInfo?id=@sale.Id" class="section-btn btn btn-primary btn-block">View More</a>
                                    </div>
                                    <div class="courses-info">
                                        <a href="/Sales/Edit?id=@sale.Id" class="section-btn btn btn-primary btn-block">Edit</a>
                                    </div>
                                    <div class="courses-info">
                                        <form asp-action="DeleteSale" asp-controller="Sales" asp-route-id="@sale.Id" method="post" id="deleteForm">
                                        </form>
                                        <button type="submit" class="section-btn btn btn-primary btn-block" data-toggle="modal" data-target="#modalDelete">Delete</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <hr />
                    <partial name="_PagingPartial" model="@Model" />
                </div>
            </div>
        </div>
    </section>
}

<!-- Modal -->
<div class="modal" id="modalDelete" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you want to delete the sale?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="deleteForm.submit()">Delete</button>
            </div>
        </div>
    </div>
</div>

