@model CarDealer.Web.ViewModels.Sales.SalesListViewModel

@if (Model.Sales.Count() == 0)
{
    <section>
        <div class="container">
            <div class="text-center">
                <h1>Car Listing</h1>

                <br>

                <p class="lead">You don't have any added car.</p>
            </div>
        </div>
    </section>
}
else
{
    <section>
        <div id="cars">
            <br />
            <div class="col-md-12 col-sm-12">
                <div class="section-title text-center">
                    <h2>My cars</h2>
                </div>
            </div>
            <br />

            <div class="product-grid-list">
                <div class="row mt-30">
                    @foreach (var sale in Model.Sales)
                    {
                        <div class="col-sm-12 col-lg-4 col-md-6">
                            <!-- product card -->
                            <div class="product-item bg-light">
                                <div class="card">
                                    <div class="thumb-content">
                                        <div class="price">$@sale.Price</div>
                                        <a asp-action="SaleInfo" asp-controller="Sales" asp-route-id="@sale.Id">
                                            <img class="card-img-top img-fluid" src="@sale.ResizedImageUrls.FirstOrDefault()" alt="Card image cap">
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <h4 class="card-title"><a asp-action="SaleInfo" asp-controller="Sales" asp-route-id="@sale.Id">@sale.Car.Make @sale.Car.Model</a></h4>
                                        <ul class="list-inline product-meta">
                                            <li class="list-inline-item">
                                                <a href="#"><i class="fa fa-calendar"></i>@sale.CreatedOnAsString</a>
                                            </li>
                                        </ul>
                                        <div class="product-ratings">
                                            <ul class="list-inline">
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="courses-info">
                                        <a asp-action="Edit" asp-controller="Sales" asp-route-id="@sale.Id" class="section-btn btn btn-primary btn-block">Edit</a>
                                    </div>
                                    @*<div class="courses-info">
                                        <a asp-action="DeleteSale" asp-controller="Sales" asp-route-id="@sale.Id" class="btn-delete btn btn-primary btn-block" data-dismiss="modal">Delete</a>
                                    </div>*@
                                    <form method="post" asp-action="DeleteSale" asp-controller="Sales" asp-route-id="@sale.Id" id="deleteForm">
                                    </form>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <hr />
                <partial name="_PagingPartial" model="@Model" />
            </div>
        </div>
    </section>

    <div class="modal" tabindex="-1" role="dialog" id="deleteModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <p>Are you sure you want to delete this car?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm').submit()">Yes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
}
