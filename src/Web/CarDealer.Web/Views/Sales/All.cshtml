@model CarDealer.Web.ViewModels.Sales.SalesListViewModel

@if (Model.Sales.Count() == 0)
{
    <section>
        <div class="container">
            <div class="text-center">
                <h1>Car Listing</h1>

                <br>

                <p class="lead">You don't have any car in your country.</p>
            </div>
        </div>
    </section>
}
else
{
    <section>
        <div class="container">
            <div class="text-center">
                <h1>Car Listing</h1>

                <br>

                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Illo, alias.</p>
            </div>
        </div>
    </section>

    <section class="section-background">
        <div class="container">

            <div class="row">
                <div class="col-lg-3 col-xs-12">
                    <div class="form">
                        <form action="#">
                            <div class="form-group">
                                <label>Used/New:</label>

                                <select class="form-control">
                                    <option value="">All</option>
                                    <option value="new">New vehicle</option>
                                    <option value="used">Used vehicle</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Vehicle Type:</label>

                                <select class="form-control">
                                    <option value="">--All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Make:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Model:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Price:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Mileage:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Engine size:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Power:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Fuel:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Gearbox:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Doors:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Number of seats:</label>

                                <select class="form-control">
                                    <option value="">-- All --</option>
                                    <option value="">option 1</option>
                                    <option value="">option 2</option>
                                    <option value="">option 3</option>
                                    <option value="">option 4</option>
                                </select>
                            </div>

                            <button type="submit" class="section-btn btn btn-primary btn-block">Search</button>
                        </form>
                    </div>
                </div>

                <div class="col-lg-9 col-xs-12">
                    <div class="row">
                        @foreach (var sale in Model.Sales)
                        {
                            <div class="col-lg-6 col-md-4 col-sm-6">
                                <div class="courses-thumb courses-thumb-secondary">
                                    <div class="courses-top">
                                        <div class="courses-image">
                                            <img src="@sale.ImageUrls.FirstOrDefault()" class="img-responsive" alt="">
                                        </div>
                                        <div class="courses-date">
                                            <span title="Author"><i class="fa fa-dashboard"></i> @sale.Car.Mileage km</span>
                                            <span title="Author"><i class="fa fa-cube"></i> @sale.Car.EngineSize cc</span>
                                            <span title="Views"><i class="fa fa-cog"></i> @sale.Car.Gearbox</span>
                                        </div>
                                    </div>

                                    <div class="courses-detail">
                                        <h3 class="mt-0"><a asp-action="SaleInfo" asp-route-id="@sale.Id">@sale.Name</a></h3>

                                        <p class="lead"><strong>@sale.Price €</strong></p>

                                        <p>@sale.Car.HorsePower hp &nbsp;&nbsp;/&nbsp;&nbsp; @sale.Car.FuelType &nbsp;&nbsp;/&nbsp;&nbsp; @sale.Car.ManufactureDate.Month/@sale.Car.ManufactureDate.Year &nbsp;&nbsp;/&nbsp;&nbsp; @sale.Car.State vehicle</p>
                                    </div>

                                    <div class="courses-info">
                                        <a href="/Sales/SaleInfo?id=@sale.Id" class="section-btn btn btn-primary btn-block">View More</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <hr />
                    <partial name="_PagingPartial" model="@Model" />
                </div>
            </div>
        </div>
    </section>
}
