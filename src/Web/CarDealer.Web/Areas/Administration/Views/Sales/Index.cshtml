@model List<CarDealer.Web.ViewModels.Sales.SaleViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-10 col-lg-5 offset-lg-0" style="margin:auto">
    <div class="widget dashboard-container my-adslist">
        <h2>All sales</h2>
        <br />
        <table class="table table-responsive product-dashboard-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>CAR INFO</th>
                    <th class="text-center">Category</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sale in Model)
                {
                    <tr>

                        <td class="product-thumb">
                            <img width="80px" height="auto" src=@sale.ResizedImageUrls.FirstOrDefault() alt="image description">
                        </td>
                        <td class="product-details">
                            <h3 class="title">@sale.Car.MakeName @sale.Car.ModelName</h3>
                            <span><strong>Posted on: </strong><time>@sale.CreatedOn.Day/@sale.CreatedOn.Month/@sale.CreatedOn.Year</time> </span>
                            <span class="location"><strong>Location</strong>@sale.CityName, @sale.CountryName</span>
                        </td>
                        <td class="product-category"><span class="categories">@sale.Car.CategoryName</span></td>
                        <td class="action" data-title="Action">
                            <div class="">
                                <ul class="list-inline justify-content-center">
                                    <li class="list-inline-item">
                                        <a data-toggle="tooltip" data-placement="top" title="view" class="view" asp-action="Details" asp-route-id="@sale.Id">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a class="edit" data-toggle="tooltip" data-placement="top" title="Edit" asp-action="Edit" asp-route-id="@sale.Id">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a class="delete" data-toggle="tooltip" data-placement="top" title="Delete" asp-action="Delete" asp-route-id="@sale.Id">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
